# ===========================================
# BPM Document Manager - Environment Variables
# ===========================================
# Copy this file to .env and update the values

# Application
NODE_ENV=development
BACKEND_PORT=3000
FRONTEND_PORT=5173

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=bpmdoc
DB_PASSWORD=bpmdoc_secret
DB_NAME=bpm_document_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET_NAME=documents
MINIO_USE_SSL=false

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Web Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@example.com

# OCR Settings
TESSERACT_LANG=eng
OCR_ENABLED=true

# Frontend URLs
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,rtf,odt,ods,odp,jpg,jpeg,png,gif,bmp,tiff
